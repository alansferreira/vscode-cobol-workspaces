{
    "name": "cobol-workspaces",
    "displayName": "cobol-workspaces",
    "description": "COBOL Workspaces Management Standards",
    "version": "0.2.0",
    "publisher": "assil",
    "repository": {
        "type": "git",
        "url": "https://github.com/alansferreira/vscode-cobol-workspaces"
    },
    "keywords": [
        "wbvaldkwbuz2mm45dpyon2bvgdfw25oi76yniqkxxh3gcfvif36a"
    ],
    "engines": {
        "vscode": "^1.28.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:JCL",
        "onLanguage:COBOL",
        "onCommand:cobolplugin.organizeFromFtp",
        "onCommand:cobolplugin.organizeExtenssions",
        "onCommand:cobolplugin.groupfilesbyprefix",
        "onCommand:cobolplugin.undolastaction"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "JCL",
                "aliases": [
                    "JCL"
                ],
                "extensions": [
                    "jcl",
                    "JCL",
                    "job",
                    "JOB"
                ],
                "configuration": "./jcl-language-configuration.json"
            },
            {
                "id": "COBOL",
                "aliases": [
                    "COB"
                ],
                "extensions": [
                    "cob",
                    "COB",
                    "cbl",
                    "CBL",
                    "cobol",
                    "COBOL"
                ],
                "configuration": "./cobol-language-provider/language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "cobolplugin.organizeFromFtp",
                "title": "COBOL: Fix workspace files by ftp download"
            },
            {
                "command": "cobolplugin.organizeExtenssions",
                "title": "COBOL: Fix workspace files extenssions"
            },
            {
                "command": "cobolplugin.groupfilesbyprefix",
                "title": "COBOL: Group workspace files by prefix"
            },
            {
                "command": "cobolplugin.undolastaction",
                "title": "COBOL: Undo last action"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/bluebird": "3.5.24",
        "@types/mocha": "5.2.5",
        "@types/nedb": "1.8.5",
        "@types/node": "8.0.33",
        "tslint": "5.8.0",
        "typescript": "3.1.6"
    },
    "dependencies": {
        "cobol-parsers": "^1.0.12",
        "moment": "2.22.2",
        "nedb": "1.8.0",
        "vscode": "^1.1.21",
        "vscode-nls": "^4.0.0"
    }
}
